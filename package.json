{
  "name": "btime",
  "version": "1.0.2",
  "description": "Includes structures to hold manage schedules using a binary representation of time",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "audit": "npm audit",
    "build": "tsc",
    "lint": "tslint -p .",
    "lint:fix": "tslint -p . --fix",
    "stryker": "stryker run",
    "test": "npm audit && npm run lint && npm run build && jest --coverage",
    "test:badges": "npm audit && npm run test && make-coverage-badge --output-path \"./coverage-badge.svg\"",
    "test:noAudit": "npm run lint && npm run lint && npm run build && jest --coverage",
    "test:watch": "npm audit && npm run lint && npm run build && jest --coverage --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/keldonia/bTime"
  },
  "author": "Brian Lambert <keldoniaskylar@gmail.com>",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "binary",
    "time",
    "scheduling"
  ],
  "devDependencies": {
    "@stryker-mutator/core": "^6.4.1",
    "@stryker-mutator/jest-runner": "^6.4.1",
    "@types/jest": "^26.0.15",
    "eslint": "^7.13.0",
    "jest": "^26.6.3",
    "jest-date-mock": "^1.0.8",
    "make-coverage-badge": "^1.2.0",
    "stryker-cli": "^1.0.0",
    "ts-jest": "^26.4.3",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "files": [
    "dist/**/*"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/{!(index),}.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "preset": "ts-jest/presets/js-with-ts",
    "reporters": [
      "default"
    ],
    "setupFiles": [
      "jest-date-mock"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/**/*.{ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "test/utils/testUtils.ts",
      "src/index.ts"
    ]
  }
}
