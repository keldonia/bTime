{
  "name": "btime",
  "version": "1.0.0",
  "description": "Includes structures to hold manage schedules using a binary representation of time",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p .",
    "lint:fix": "tslint -p . --fix",
    "stryker": "stryker run",
    "test": "npm audit && npm run lint && npm run build && jest --coverage",
    "test:noAudit": "npm run lint && npm run lint && npm run build && jest --coverage",
    "test:watch": "npm audit && npm run lint && npm run build && jest --coverage --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/keldonia/bTime"
  },
  "author": "Brian Lambert <keldoniaskylar@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "directories": {
    "test": "test"
  },
  "keywords": [
    "binary",
    "time",
    "scheduling"
  ],
  "devDependencies": {
    "@stryker-mutator/core": "^3.0.2",
    "@stryker-mutator/jest-runner": "^3.0.2",
    "@stryker-mutator/typescript": "^3.0.2",
    "@types/jest": "^25.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^25.1.0",
    "jest-date-mock": "^1.0.7",
    "jest-junit": "^6.4.0",
    "stryker-cli": "^1.0.0",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.5"
  },
  "files": [
    "build"
  ],
  "jest-junit": {
    "suiteName": "Unit Test Report",
    "outputName": "./jest_unit_tests.xml",
    "classNameTemplate": "bTime-unit-tests",
    "ancestorSeparator": " ... ",
    "usePathForSuiteName": "true"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/{!(index),}.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest/presets/js-with-ts",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFiles": [
      "jest-date-mock"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/**/*.{ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "test/utils/testUtils.ts",
      "src/index.ts"
    ]
  }
}
