{
  "packageManager": "npm",
  "reporters": [
    "clear-text",
    "html",
    "progress"
  ],
  "htmlReporter": {
    "baseDir": "coverage/stryker"
  },
  "testRunner": "jest",
  "coverageAnalysis": "all",
  "tsconfigFile": "tsconfig.json",
  "mutate": [
      "src/**/*.ts",
      "!src/@types/*.ts"
  ],
  "thresholds": {
    "break": 100
  }
}
